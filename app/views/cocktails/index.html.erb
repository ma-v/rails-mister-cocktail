<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
    <div class="card-box">
      <%= link_to(cocktail_path(cocktail)) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo, height: 180, crop: :fill %>)">
        <%= cocktail.name.capitalize %>
      </div>
      <% end %>

      <div class="card-delete">
        <%= link_to(cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" }) do %>
        <i class="far fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>

