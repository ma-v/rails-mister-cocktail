<div class="cocktail-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @cocktail.photo, height: 500, width: 600 %>)";>
  <div class="container">
    <h1><%= @cocktail.name %></h1>
    <div><%= link_to 'Add a new Ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></div>
  </div>
</div>

<div class="container">
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <div class="card-product">
      <img src="https://source.unsplash.com/random/?cocktail" />
      <div class="card-product-infos">
        <h2><%= dose.ingredient.name %></h2>
        <p><%= dose.description %> <%= link_to(dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }) do %>
      <i class="far fa-trash-alt"></i>
      <% end %></p>
      </div>
    </div>
    <% end %>
  </ul>
</div>
